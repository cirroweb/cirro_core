		),
	);
	
	$entities['collection'] = array(
		'label' => t('Collection'),
		'controller class' => 'cirroCoreController',
		'base table' => 'PROJECT_collection',
		'dashboard' => array('add', 'table', 'weight'),
		'multi_img' => array(
			'collection_imgs' => array(
				'label' => 'Collection Images',
